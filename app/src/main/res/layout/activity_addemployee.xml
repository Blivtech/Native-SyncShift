<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_add_employee"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Employee details title -->
        <TextView
            android:id="@+id/tvSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employee_details"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Name -->
        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_name"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/tvSection"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/labelName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mobile -->
        <TextView
            android:id="@+id/labelMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_mobile"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/tilName"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mobileContainer"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"

            android:background="@drawable/bg_input"
            app:layout_constraintTop_toBottomOf="@id/labelMobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/ivMobileDrop"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:layout_marginStart="6dp"
                android:contentDescription="@string/cd_dropdown"
                app:layout_constraintStart_toEndOf="@id/tvCountryCode"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/hint_mobile_number"
                android:inputType="phone"
                android:maxLength="10"
                android:background="@android:color/transparent"
                android:paddingStart="12dp"
                app:layout_constraintStart_toEndOf="@id/ivMobileDrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Joining Date -->
        <TextView
            android:id="@+id/labelJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_joining_date"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/mobileContainer"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/joiningContainer"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            app:layout_constraintTop_toBottomOf="@id/labelJoin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_joining_date"
                android:textColor="#A3A3A3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/ivCalendar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:contentDescription="@string/cd_calendar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Employee Type -->
        <TextView
            android:id="@+id/labelType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_employee_type"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/joiningContainer"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/actEmployeeType"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:hint="@string/hint_select_employee_type"
            android:background="@drawable/bg_input"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:focusable="false"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:layout_constraintTop_toBottomOf="@id/labelType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Department -->
        <TextView
            android:id="@+id/labelDept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_department_optional"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/actEmployeeType"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/actDept"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:hint="@string/hint_select_department"
            android:background="@drawable/bg_input"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:focusable="false"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:layout_constraintTop_toBottomOf="@id/labelDept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Designation -->
        <TextView
            android:id="@+id/labelDesig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_designation_optional"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/actDept"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDesig"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/labelDesig"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDesig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_designation"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_email_optional"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/tilDesig"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/labelEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tvPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tilEmail"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Payment Toggle (Monthly / Daily / Hourly) -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/togglePay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvPayment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMonthly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pt_monthly"
                app:layout_constraintWidth_percent="0.33"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDaily"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pt_daily"
                app:layout_constraintWidth_percent="0.33"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHourly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pt_hourly"
                app:layout_constraintWidth_percent="0.33"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Salary Input -->
        <TextView
            android:id="@+id/labelSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_salary"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/togglePay"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSalary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/labelSalary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_salary"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Leaves & Overtime Input -->
        <TextView
            android:id="@+id/labelLeaves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_leaves"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tilSalary"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etLeaves"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input"
            android:paddingStart="12dp"
            android:inputType="number"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@id/labelLeaves"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/labelOt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_overtime"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etLeaves"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etOt"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input"
            android:paddingStart="12dp"
            android:hint="@string/hint_overtime"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/labelOt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Timing In/Out -->
        <TextView
            android:id="@+id/labelTiming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_timing"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etOt"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/labelTiming"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilIn"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tilOut"
                app:layout_constraintWidth_percent="0.48"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etIn"
                    android:hint="00:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilOut"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tilIn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.48"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOut"
                    android:hint="00:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Horizontal Day Scroll -->
        <HorizontalScrollView
            android:id="@+id/dayScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/timeRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dayContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tvMon"
                    style="@style/DayText"
                    android:text="Mon"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTue"
                    style="@style/DayText"
                    android:text="Tue"
                    app:layout_constraintStart_toEndOf="@id/tvMon"
                    app:layout_constraintTop_toTopOf="@id/tvMon"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/tvWed"
                    style="@style/DayText"
                    android:text="Wed"
                    app:layout_constraintStart_toEndOf="@id/tvTue"
                    app:layout_constraintTop_toTopOf="@id/tvTue"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/tvThu"
                    style="@style/DayText"
                    android:text="Thu"
                    app:layout_constraintStart_toEndOf="@id/tvWed"
                    app:layout_constraintTop_toTopOf="@id/tvWed"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/tvFri"
                    style="@style/DayText"
                    android:text="Fri"
                    app:layout_constraintStart_toEndOf="@id/tvThu"
                    app:layout_constraintTop_toTopOf="@id/tvThu"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/tvSat"
                    style="@style/DayText"
                    android:text="Sat"
                    app:layout_constraintStart_toEndOf="@id/tvFri"
                    app:layout_constraintTop_toTopOf="@id/tvFri"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/tvSun"
                    style="@style/DayText"
                    android:text="Sun"
                    app:layout_constraintStart_toEndOf="@id/tvSat"
                    app:layout_constraintTop_toTopOf="@id/tvSat"
                    android:layout_marginStart="12dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

        <!-- Multiple Shift Switch -->
        <TextView
            android:id="@+id/labelMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_multiple_shifts"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/dayScroll"
            app:layout_constraintStart_toStartOf="parent"/>

        <Switch
            android:id="@+id/switchMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dayScroll"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <!-- Submit Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:text="@string/btn_submit"
            android:backgroundTint="@color/blue"
            android:background="@drawable/edittext_border"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/switchMulti"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
