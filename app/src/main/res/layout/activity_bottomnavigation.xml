<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="8dp"
        android:orientation="horizontal"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:id="@+id/tabHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconHome"
                android:src="@drawable/ic_home"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/textHome"
                android:text="Home"
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:textSize="@dimen/text_normal_14sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!-- EMPLOYEES TAB -->
        <LinearLayout
            android:id="@+id/tabEmployees"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconEmployees"
                android:src="@drawable/ic_employees"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/textEmployees"
                android:text="Employees"
                android:visibility="gone"
                android:layout_marginStart="6dp"
                android:textSize="@dimen/text_normal_14sp"
                android:textColor="@color/blue"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!-- REPORTS TAB -->
        <LinearLayout
            android:id="@+id/tabReports"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconReports"
                android:src="@drawable/ic_report"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/textReports"
                android:text="Reports"
                android:visibility="gone"
                android:layout_marginStart="6dp"
                android:textSize="@dimen/text_normal_14sp"
                android:textColor="@color/blue"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
