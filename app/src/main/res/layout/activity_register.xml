<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hint_name"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittext_border"
            android:paddingStart="12dp"
            android:hint="@string/hint_name"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_mobile_number"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mobileContainer"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittext_border"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvMobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/ivMobileDropdown"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/tvCountryCode"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/hint_mobile_number"
                android:paddingStart="8dp"
                android:background="@android:color/transparent"
                android:inputType="phone"
                app:layout_constraintStart_toEndOf="@+id/ivMobileDropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_username"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/mobileContainer"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittext_border"
            android:paddingStart="12dp"
            android:hint="@string/hint_username"
            app:layout_constraintTop_toBottomOf="@+id/tvUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_password"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etUsername"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_border"
            android:paddingStart="12dp"
            android:hint="@string/hint_password"
            android:drawableEnd="@drawable/ic_visibility"
            app:layout_constraintTop_toBottomOf="@+id/tvPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contractor_category"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etCategory"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/select_category"
            android:background="@drawable/edittext_border"
            android:paddingStart="12dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            app:layout_constraintTop_toBottomOf="@+id/tvCategory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvActiveStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/active_status"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etCategory"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etActiveStatus"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/select_active_status"

            android:background="@drawable/edittext_border"
            android:paddingStart="12dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            app:layout_constraintTop_toBottomOf="@+id/tvActiveStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvAccountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_type"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etActiveStatus"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etAccountType"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/select_account_type"

            android:background="@drawable/edittext_border"
            android:paddingStart="12dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            app:layout_constraintTop_toBottomOf="@+id/tvAccountType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etAccountType"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etMode"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/select_mode"

            android:background="@drawable/edittext_border"
            android:paddingStart="12dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            app:layout_constraintTop_toBottomOf="@+id/tvMode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvUpdatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updated_date"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etMode"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etUpdatedDate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/select_updated_date"
            android:background="@drawable/edittext_border"

            android:paddingStart="12dp"
            android:drawableEnd="@drawable/ic_calendar"
            app:layout_constraintTop_toBottomOf="@+id/tvUpdatedDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvActiveDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/active_date"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etUpdatedDate"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etActiveDate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/select_active_date"
            android:background="@drawable/edittext_border"
            android:paddingStart="12dp"
            android:drawableEnd="@drawable/ic_calendar"
            app:layout_constraintTop_toBottomOf="@+id/tvActiveDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvReferral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/referral_id"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etActiveDate"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etReferral"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/hint_referral_id"
            android:background="@drawable/edittext_border"
            android:paddingStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReferral"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etReferral"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:hint="@string/hint_address"
            android:gravity="top|start"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:background="@drawable/edittext_border"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/etAddress"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etAppVersion"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittext_border"
            android:text="@string/default_app_version"

            android:textColor="#000000"
            android:paddingStart="12dp"

            app:layout_constraintTop_toBottomOf="@+id/tvVersion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_submit"
            android:textAllCaps="false"
            app:iconGravity="textStart"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etAppVersion"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
