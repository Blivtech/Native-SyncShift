<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:fitsSystemWindows="false"
    android:padding="20dp">


    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_extra_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvWelcomeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Register_Page"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/ivRegister"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/register_banner"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <ImageView
        android:id="@+id/ivName"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_name"
        app:tint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/ivRegister"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:background="@null"
        android:textColor="@color/blue"
        android:textColorHint="@color/input_hint"
        android:paddingStart="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ivName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivName"
        app:layout_constraintBottom_toBottomOf="@id/ivName"
        android:layout_marginEnd="20dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/ivName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        />


    <ImageView
        android:id="@+id/ivPhone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_phone"
        app:tint="@color/blue"
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:background="@null"
        android:inputType="phone"
        android:textColor="@color/blue"
        android:textColorHint="@color/input_hint"
        android:paddingStart="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ivPhone"
        app:layout_constraintTop_toTopOf="@id/ivPhone"
        app:layout_constraintBottom_toBottomOf="@id/ivPhone"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/ivPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp" />


    <ImageView
        android:id="@+id/ivAddress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_address"
        app:tint="@color/blue"
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/etPhone"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:background="@null"
        android:textColor="@color/blue"
        android:textColorHint="@color/input_hint"
        android:paddingStart="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ivAddress"
        app:layout_constraintTop_toTopOf="@id/ivAddress"
        app:layout_constraintBottom_toBottomOf="@id/ivAddress"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/ivAddress"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/ivContract"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_contract"
        app:tint="@color/blue"
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/etAddress"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etContract"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Contract Category"
        android:background="@null"
        android:textColor="@color/blue"
        android:textColorHint="@color/input_hint"
        android:paddingStart="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ivContract"
        app:layout_constraintTop_toTopOf="@id/ivContract"
        app:layout_constraintBottom_toBottomOf="@id/ivContract"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/ivContract"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/ivReferral"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_referal"
        app:tint="@color/blue"
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/etContract"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etReferral"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Referral ID"
        android:background="@null"
        android:textColor="@color/blue"
        android:textColorHint="@color/input_hint"
        android:paddingStart="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ivReferral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivReferral"
        app:layout_constraintBottom_toBottomOf="@id/ivReferral"
        android:layout_marginEnd="20dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/ivReferral"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/ivUser"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_username"
        app:tint="@color/blue"
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/etReferral"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:background="@null"
        android:textColor="@color/blue"
        android:textColorHint="@color/input_hint"
        android:paddingStart="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ivUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivUser"
        app:layout_constraintBottom_toBottomOf="@id/ivUser"
        android:layout_marginEnd="20dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/ivUser"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <ImageView
        android:id="@+id/ivPass"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_lock"
        app:tint="@color/blue"
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/etUsername"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/blue"
        android:textColorHint="@color/input_hint"
        android:textSize="18sp"
        android:background="@null"
        android:paddingStart="10dp"
        app:layout_constraintStart_toEndOf="@id/ivPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPass"
        app:layout_constraintBottom_toBottomOf="@id/ivPass"
        android:layout_marginEnd="20dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/ivPass"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Register"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"/>



</androidx.constraintlayout.widget.ConstraintLayout>
