<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:gravity="center"
            style="@style/HeadingStyle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_name"
            style="@style/LabelTextStyle"
            app:layout_constraintTop_toBottomOf="@id/tvHeading"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittext_border"
            style="@style/InputTextStyle"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/hint_name"
            android:paddingStart="12dp" />

        <!-- ✅ Mobile Label -->
        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LabelTextStyle"
            android:layout_marginTop="14dp"
            android:text="@string/hint_mobile_number"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- ✅ Updated Mobile Number Field -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mobileContainer"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittext_border"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvMobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/ivMobileDropdown"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@+id/tvCountryCode"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/hint_mobile_number"
                android:paddingStart="8dp"
                android:maxLength="10"
                android:background="@android:color/transparent"
                android:inputType="phone"
                app:layout_constraintStart_toEndOf="@+id/ivMobileDropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_username"
            style="@style/LabelTextStyle"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/mobileContainer"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="0dp"
            android:layout_height="48dp"
            style="@style/InputTextStyle"
            android:background="@drawable/edittext_border"
            android:hint="@string/hint_username"
            android:paddingStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LabelTextStyle"
            android:layout_marginTop="14dp"
            android:text="@string/hint_password"
            app:layout_constraintTop_toBottomOf="@id/etUsername"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="48dp"
            style="@style/InputTextStyle"
            android:inputType="textPassword"
            android:background="@drawable/edittext_border"
            android:drawableEnd="@drawable/ic_visibility"
            android:hint="@string/hint_password"
            android:paddingStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvReferral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LabelTextStyle"
            android:layout_marginTop="14dp"
            android:text="@string/referral_id"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etReferral"
            android:layout_width="0dp"
            android:layout_height="48dp"
            style="@style/InputTextStyle"
            android:background="@drawable/edittext_border"
            android:hint="@string/hint_referral_id"
            android:paddingStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvReferral"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LabelTextStyle"
            android:text="@string/address"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etReferral"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="0dp"
            android:layout_height="100dp"
            style="@style/InputTextStyle"
            android:background="@drawable/edittext_border"
            android:hint="@string/hint_address"
            android:gravity="top|start"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_submit"
            style="@style/ButtonTextStyle"
            android:backgroundTint="@color/primaryColor"
            app:cornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
