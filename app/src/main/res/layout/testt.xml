<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_add_employee"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Employee details -->
        <TextView
            android:id="@+id/tvSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employee_details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Name -->
        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_name"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/tvSection"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_input"
            android:hint="@string/hint_name"
            android:paddingStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/labelName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Mobile -->
        <TextView
            android:id="@+id/labelMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_mobile"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mobileContainer"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/bg_input"
            app:layout_constraintTop_toBottomOf="@id/labelMobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/ivMobileDrop"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_arrow_drop_down"
                app:layout_constraintStart_toEndOf="@id/tvCountryCode"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="6dp"/>

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/hint_mobile_number"
                android:inputType="phone"
                android:maxLength="10"
                android:background="@android:color/transparent"
                android:paddingStart="12dp"
                app:layout_constraintStart_toEndOf="@id/ivMobileDrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Joining date -->
        <TextView
            android:id="@+id/labelJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_joining_date"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/mobileContainer"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/actJoiningDate"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:hint="@string/hint_joining_date"
            android:background="@drawable/bg_input"
            android:paddingStart="12dp"
            android:drawableEnd="@drawable/ic_ccalendar"
            android:focusable="false"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/labelJoin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Employee Type -->
        <TextView
            android:id="@+id/labelType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_employee_type"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/actJoiningDate"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/actEmployeeType"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:hint="@string/hint_select_employee_type"
            android:background="@drawable/bg_input"
            android:paddingStart="12dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@id/labelType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Payment -->
        <TextView
            android:id="@+id/tvPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/actEmployeeType"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/togglePay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:layout_constraintTop_toBottomOf="@id/tvPayment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMonthly"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Monthly"
                android:textAllCaps="false"
                android:backgroundTint="@color/toggle_bg_selector"
                android:textColor="@color/toggle_text_selector"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDaily"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Daily"
                android:textAllCaps="false"
                android:backgroundTint="@color/toggle_bg_selector"
                android:textColor="@color/toggle_text_selector"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHourly"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Hourly"
                android:textAllCaps="false"
                android:backgroundTint="@color/toggle_bg_selector"
                android:textColor="@color/toggle_text_selector"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>
        <!-- Salary -->
        <TextView
            android:id="@+id/labelSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_salary"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/togglePay"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSalary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/labelSalary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSalary"
                android:background="@drawable/bg_input"
                android:hint="@string/hint_salary"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Leaves -->
        <TextView
            android:id="@+id/labelLeaves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_leaves"
            android:textSize="13sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tilSalary"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etLeaves"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input"
            android:paddingStart="12dp"
            android:inputType="number"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@id/labelLeaves"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Submit -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:text="@string/btn_submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/etLeaves"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
