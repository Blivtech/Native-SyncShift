<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false"
    android:padding="20dp">


    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_extra_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvWelcomeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_back"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/ivWelcome"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/login_banner"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/ivUser"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_user"
        app:layout_constraintTop_toBottomOf="@id/ivWelcome"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:tint="@color/blue"
        android:layout_marginStart="20dp"
       />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/username_hint"
        android:background="@null"
        android:paddingStart="8dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/input_hint"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ivUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivUser"
        app:layout_constraintBottom_toBottomOf="@id/ivUser"
        tools:ignore="RtlSymmetry"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.85"/>

    <ImageView
        android:id="@+id/ivTick"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/etUsername"
        app:layout_constraintBottom_toBottomOf="@id/etUsername"
        app:tint="@color/blue"
       />

    <View
        android:id="@+id/lineUsername"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="20dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/ivUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/ivLock"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_lock"
        app:layout_constraintTop_toBottomOf="@id/lineUsername"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        app:tint="@color/blue"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        android:background="@null"
        android:paddingStart="8dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/input_hint"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/ivLock"
        app:layout_constraintEnd_toStartOf="@id/ivEye"
        app:layout_constraintTop_toTopOf="@id/ivLock"
        app:layout_constraintBottom_toBottomOf="@id/ivLock"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.74"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/ivEye"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_visibility_off"
        app:layout_constraintTop_toTopOf="@id/ivLock"
        app:layout_constraintBottom_toBottomOf="@id/ivLock"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:tint="@color/blue" />

    <View
        android:id="@+id/linePassword"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blue"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivLock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:layout_marginEnd="20dp"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/linePassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/tvForgotPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/tvOtp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login_via_otp"
        android:gravity="center"
        android:textColor="@color/blue"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvOtp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/btnFacebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_facebook"
            android:padding="5dp"
            android:contentDescription="Facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <ImageView
            android:id="@+id/btnGoogle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_google1"
            android:padding="5dp"
            android:backgroundTint="@color/blue"
            android:contentDescription="Google"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/btnFacebook"
            app:layout_constraintTop_toTopOf="@id/btnFacebook"
            app:layout_constraintBottom_toBottomOf="@id/btnFacebook"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tvSignUpHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/input_hint"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tvSignUpHint"
            app:layout_constraintTop_toTopOf="@id/tvSignUpHint"
            app:layout_constraintBottom_toBottomOf="@id/tvSignUpHint" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
