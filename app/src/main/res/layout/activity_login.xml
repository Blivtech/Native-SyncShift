<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color">

    <LinearLayout
        android:id="@+id/cl_imglo"
        android:layout_width="80dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:background="@drawable/bg_light_blue_with_radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_login"
            android:scaleType="centerCrop"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
         />


    </LinearLayout>


    <TextView
        android:id="@+id/txtPortal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMPLOYEE PORTAL"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/text_small_12sp"
        android:textStyle="bold"
        android:textColor="@color/text_gray"
        app:layout_constraintTop_toBottomOf="@id/cl_imglo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure Login"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/text_header_22_sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        app:layout_constraintTop_toBottomOf="@id/txtPortal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/txtSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:textColor="@color/text_gray"

        android:text="Please enter your credentials to access the workspace."
        android:textSize="@dimen/text_small_12sp"
        app:layout_constraintEnd_toEndOf="@+id/txtEmailLabel"
        app:layout_constraintStart_toStartOf="@+id/txtEmailLabel"
        app:layout_constraintTop_toBottomOf="@id/txtTitle" />

    <TextView
        android:id="@+id/txtEmailLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Username / Email"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/text_normal_14sp"
        app:layout_constraintTop_toBottomOf="@id/txtSub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"
        android:textColor="@color/text_gray"

        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edit_box"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_dark"
        android:gravity="center_vertical"
        android:hint="Enter Username"
        android:maxLines="1"
        android:padding="15dp"
        android:textSize="@dimen/text_normal_14sp"
        app:layout_constraintEnd_toEndOf="@+id/txtEmailLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtEmailLabel"
        app:layout_constraintTop_toBottomOf="@id/txtEmailLabel" />

    <TextView
        android:id="@+id/txtPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textColor="@color/text_gray"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/text_normal_14sp"
        app:layout_constraintStart_toStartOf="@+id/txtEmailLabel"
        app:layout_constraintTop_toBottomOf="@id/et_username" />

    <TextView
        android:id="@+id/txtForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/text_normal_14sp"
        android:textColor="@color/button_color"
        app:layout_constraintEnd_toEndOf="@+id/et_username"
        app:layout_constraintTop_toTopOf="@id/txtPasswordLabel" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edit_box"
        android:drawableStart="@drawable/ic_lock"
        android:drawableEnd="@drawable/ic_eye"
        android:drawablePadding="10dp"
        android:hint="Enter password"
        android:fontFamily="@font/poppins_medium"
        android:inputType="textPassword"
        android:textColor="@color/text_dark"
        android:padding="15dp"
        android:textSize="@dimen/text_normal_14sp"

        app:layout_constraintEnd_toEndOf="@+id/txtEmailLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtEmailLabel"
        app:layout_constraintTop_toBottomOf="@id/txtPasswordLabel" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_button_blue"
        android:text="Log In â†’"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_normal_14sp"
        app:layout_constraintEnd_toEndOf="@+id/et_password"
        app:layout_constraintStart_toStartOf="@+id/txtEmailLabel"
        app:layout_constraintTop_toBottomOf="@id/et_password" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvSignUpHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="@dimen/text_normal_14sp"
            android:textColor="@color/text_gray"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:textColor="@color/button_color"
            android:textSize="@dimen/text_normal_14sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tvSignUpHint"
            app:layout_constraintTop_toTopOf="@id/tvSignUpHint"
            app:layout_constraintBottom_toBottomOf="@id/tvSignUpHint" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_bilvetech_log"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/poweredby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/satoshi_medium"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/str_powered_by"
            android:textColor="@color/text_gray"
            app:layout_constraintBottom_toTopOf="@+id/iv_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="10dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>