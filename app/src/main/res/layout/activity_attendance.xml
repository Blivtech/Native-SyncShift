<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6ECEC"
    android:padding="16dp">

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_arrow_back"
        android:padding="6dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Day Plan"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toStartOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBack"
        android:gravity="center_horizontal"/>

    <!-- Current Date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="04 Nov 2025"
        android:gravity="center"
        android:textColor="#555555"
        android:background="@drawable/bg_edit_box"


        android:textSize="11sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBack"/>

    <!-- White Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Work Type Label -->
            <TextView
                android:id="@+id/tvWorkType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Plan"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Work Type Box -->
            <EditText
                android:id="@+id/etWorkType"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_edit_box"
                android:hint="Select Work Plan"
                android:paddingStart="14dp"
                android:paddingEnd="40dp"
                android:focusable="false"
                android:clickable="true"
                app:layout_constraintTop_toBottomOf="@id/tvWorkType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="6dp"/>

            <!-- Down Arrow -->
            <ImageView
                android:id="@+id/ivDownArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_drop_down"
                app:layout_constraintEnd_toEndOf="@id/etWorkType"
                app:layout_constraintTop_toTopOf="@id/etWorkType"
                app:layout_constraintBottom_toBottomOf="@id/etWorkType"
                android:layout_marginEnd="10dp"/>

            <!-- Remarks Label -->
            <TextView
                android:id="@+id/tvRemarksLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/etWorkType"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="18dp"/>

            <!-- Remarks EditText -->
            <EditText
                android:id="@+id/etRemarks"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:background="@drawable/bg_edit_box"
                android:padding="12dp"
                android:gravity="top"
                android:hint="Enter remarks"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvRemarksLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="6dp"/>

            <!-- Do Attendance Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDoAttendance"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Do Attendance"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_bold"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:background="@drawable/edittext_border"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/etWorkType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="18dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Save Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:backgroundTint="@color/blue"
        android:background="@drawable/edittext_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
