<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/background_color">

    <!-- Toolbar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- ================= DAY PLAN ================= -->

            <TextView
                android:id="@+id/txtDayPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day Plan"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Working Day -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWorkingDay"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#3F51FF"
                app:layout_constraintTop_toBottomOf="@id/txtDayPlan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardHoliday">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:drawableStart="@drawable/svg_workingday"
                    android:drawablePadding="12dp"
                    android:text="Working Day"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:drawableTint="#3F51FF"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Holiday -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHoliday"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD"
                app:layout_constraintTop_toTopOf="@id/cardWorkingDay"
                app:layout_constraintStart_toEndOf="@id/cardWorkingDay"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:drawableStart="@drawable/svg_umberlla"
                    android:drawablePadding="12dp"
                    android:text="Holiday"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:drawableTint="#FF9800"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Weekly Off -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeeklyOff"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@id/cardWorkingDay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardLeave">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:drawableStart="@drawable/svg_weeklyoff"
                    android:drawablePadding="12dp"
                    android:text="Weekly Off"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:drawableTint="#9C27B0"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Leave -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLeave"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD"
                app:layout_constraintTop_toTopOf="@id/cardWeeklyOff"
                app:layout_constraintStart_toEndOf="@id/cardWeeklyOff"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:drawableStart="@drawable/vector_upload"
                    android:drawablePadding="12dp"
                    android:text="Leave"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:drawableTint="#F44336"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= DURATION ================= -->

            <TextView
                android:id="@+id/txtDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/cardWeeklyOff"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/layoutDuration"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_segment_container"
                android:padding="4dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/txtDuration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvFullDay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Full Day"
                    android:textStyle="bold"
                    android:textColor="@color/button_color"
                    android:background="@drawable/bg_segment_selected"/>

                <TextView
                    android:id="@+id/tvHalfDay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Half Day"
                    android:textColor="@color/text_gray"/>
            </LinearLayout>

            <!-- ================= SHIFT TYPE ================= -->

            <TextView
                android:id="@+id/txtShiftType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shift Type"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/layoutDuration"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardShiftType"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/txtShiftType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="14dp">

                    <ImageView
                        android:id="@+id/iconClock"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/button_color" />

                    <TextView
                        android:id="@+id/tvShiftName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General Shift"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/iconClock"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/svg_down_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@color/text_gray" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
